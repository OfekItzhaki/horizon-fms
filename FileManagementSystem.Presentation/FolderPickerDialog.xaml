<Window x:Class="FileManagementSystem.Presentation.FolderPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Folder" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Select a folder:" Margin="0,0,0,10"/>
        <TextBox x:Name="FolderPathTextBox" Grid.Row="1" Margin="0,0,0,10" IsReadOnly="True"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Browse..." Width="100" Margin="5,0" Click="BrowseButton_Click"/>
            <Button Content="OK" Width="75" Margin="5,0" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
