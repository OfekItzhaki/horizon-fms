<Window x:Class="FileManagementSystem.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManagementSystem.Presentation"
        xmlns:converters="clr-namespace:FileManagementSystem.Presentation.Converters"
        mc:Ignorable="d"
        Title="File Management System" Height="600" Width="1200"
        AllowDrop="True"
        Background="LightSteelBlue">
    <Window.Resources>
        <converters:TagsConverter x:Key="TagsConverter"/>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
    </Window.Resources>
    <Grid Background="LightSteelBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="White">
            <MenuItem Header="_File">
                <MenuItem Header="_Scan Directory..." Click="ScanDirectory_Click"/>
                <MenuItem Header="_Upload File..." Click="UploadFile_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Rename" Click="RenameFile_Click"/>
                <MenuItem Header="_Delete" Click="DeleteFile_Click"/>
                <Separator/>
                <MenuItem Header="_Undo" Click="Undo_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Refresh" Click="Refresh_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Search Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="4" Background="White">
            <TextBox x:Name="SearchTextBox" Width="300" Height="25" 
                     VerticalContentAlignment="Center"
                     TextChanged="SearchTextBox_TextChanged"
                     KeyDown="SearchTextBox_KeyDown"/>
            <Button Content="Search" Click="SearchButton_Click"/>
            <Button Content="Clear" Click="ClearSearch_Click"/>
            <CheckBox x:Name="PhotosOnlyCheckBox" Content="Photos Only" 
                      Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Folder Tree -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,4,0" Background="White">
                <Grid>
                    <TreeView x:Name="FoldersTreeView" 
                              SelectedItemChanged="FoldersTreeView_SelectedItemChanged"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding SubFolders}">
                                <TextBlock Text="{Binding Name}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    <TextBlock x:Name="FoldersStatusText" 
                               Text="No folders loaded" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>
            
            <!-- File List -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Background="White">
                <Grid>
                    <ListView x:Name="FilesListView" 
                              SelectionChanged="FilesListView_SelectionChanged"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="300" DisplayMemberBinding="{Binding Path}"/>
                                <GridViewColumn Header="Size" Width="100" DisplayMemberBinding="{Binding Size, StringFormat={}{0:N0} bytes}"/>
                                <GridViewColumn Header="Type" Width="150" DisplayMemberBinding="{Binding MimeType}"/>
                                <GridViewColumn Header="Tags" Width="200">
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="Tags" Converter="{StaticResource TagsConverter}"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>
                                <GridViewColumn Header="Date" Width="150" DisplayMemberBinding="{Binding CreatedDate, StringFormat={}{0:g}}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <TextBlock x:Name="FilesStatusText" 
                               Text="No files loaded" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Progress Bar -->
        <Grid Grid.Row="3" Margin="4" Visibility="Collapsed" x:Name="ProgressGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ProgressBar x:Name="ProgressBar" Grid.Row="0" Height="20" 
                         Minimum="0" Maximum="100"/>
            <TextBlock x:Name="ProgressTextBlock" Grid.Row="1" Margin="4,2"/>
        </Grid>
    </Grid>
</Window>
